{
  "name": "message-nexus-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "A unified, type-safe, multi-protocol cross-context message communication library",
  "scripts": {
    "dev": "pnpm --filter @message-nexus/example dev",
    "dev:ws": "pnpm --filter @message-nexus/server start",
    "build": "pnpm build:deps && pnpm build:example",
    "build:deps": "pnpm --filter message-nexus build && pnpm --filter task-scheduler build",
    "build:example": "pnpm --filter @message-nexus/example build",
    "test": "pnpm --filter message-nexus test",
    "test:run": "pnpm --filter message-nexus test:run",
    "test:task-scheduler": "pnpm --filter task-scheduler test",
    "type-check": "pnpm --filter message-nexus type-check",
    "lint": "prettier --write --experimental-cli \"packages/*/src/**/*.{ts,vue}\"",
    "clean": "pnpm --filter ./packages/** -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "3.8.1",
    "tsup": "^8.4.0",
    "typescript": "~5.9.3"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": "^20.19.0 || >=22.12.0",
    "pnpm": ">=10.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
