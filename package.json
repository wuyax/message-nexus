{
  "name": "message-bridge-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "A unified, type-safe, multi-protocol cross-context message communication library",
  "scripts": {
    "dev": "pnpm --filter @message-bridge/example dev",
    "build": "pnpm --filter message-bridge build && pnpm --filter @message-bridge/example build",
    "build:core": "pnpm --filter message-bridge build",
    "build:example": "pnpm --filter @message-bridge/example build",
    "test": "pnpm --filter message-bridge test",
    "test:run": "pnpm --filter message-bridge test:run",
    "type-check": "pnpm --filter message-bridge type-check",
    "lint": "prettier --write --experimental-cli \"packages/*/src/**/*.{ts,vue}\"",
    "clean": "pnpm --filter ./packages/** -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "3.8.1",
    "tsup": "^8.4.0",
    "typescript": "~5.9.3"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": "^20.19.0 || >=22.12.0",
    "pnpm": ">=10.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
