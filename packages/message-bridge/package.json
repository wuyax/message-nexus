{
  "name": "message-bridge",
  "version": "1.0.0",
  "type": "module",
  "description": "A unified, type-safe, multi-protocol cross-context message communication library",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "message",
    "bridge",
    "communication",
    "postmessage",
    "websocket",
    "mitt",
    "broadcast"
  ],
  "license": "MIT",
  "peerDependencies": {
    "mitt": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "mitt": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^24.10.9",
    "tsup": "^8.4.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.18",
    "jsdom": "^27.4.0"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  }
}
